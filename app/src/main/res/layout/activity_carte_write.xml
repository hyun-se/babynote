<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".식단표.Carte_write">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/carte_write_toolbar" app:titleTextColor="@color/backbaby"/>

    <Button
            android:id="@+id/button_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="날짜를 지정해주세요." />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/item_border">

            <ImageView
                    android:id="@+id/carte_image_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@tools:sample/avatars" />

            <Button
                    android:id="@+id/button_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사진 선택" />
        </LinearLayout>

        <EditText
                android:id="@+id/edit_menu1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/item_border"
                android:ems="10"
                android:gravity="start|top"
                android:hint="  오전 간식"
                android:inputType="textMultiLine" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/item_border"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/carte_image_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@tools:sample/avatars" />

            <Button
                    android:id="@+id/button_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사진 선택" />
        </LinearLayout>

        <EditText
                android:id="@+id/edit_menu2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/item_border"
                android:ems="10"
                android:gravity="start|top"
                android:hint="  점심 식사"
                android:inputType="textMultiLine" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/item_border"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/carte_image_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@tools:sample/avatars" />

            <Button
                    android:id="@+id/button_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사진 선택" />
        </LinearLayout>

        <EditText
                android:id="@+id/edit_menu3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/item_border"
                android:ems="10"
                android:gravity="start|top"
                android:hint="  오후 간식"
                android:inputType="textMultiLine" />
    </LinearLayout>
</LinearLayout>