    <!--            android:layout_height="wrap_content"-->
    <!--            android:layout_weight="1"-->
    <!--            app:layout_constraintStart_toEndOf="@id/kindergarten_adress"-->
    <!--            app:layout_constraintTop_toTopOf="parent"-->
    <!--            android:layout_marginTop="10dp"-->
    <!--            app:srcCompat="@drawable/ic_arrow_forward_white_24dp" />-->

    <TextView
            android:id="@+id/kindergarten_callnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="15dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="@id/select_kindergarten"
            app:layout_constraintTop_toBottomOf="@id/kindergarten_adress"
            android:textColor="#000"/>
</android.support.constraint.ConstraintLayout>