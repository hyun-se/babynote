<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/item_border">

    <ImageView
            android:id="@+id/kizPhotoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.101"
            app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
            android:id="@+id/kizName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/kizPhotoImg"
            app:layout_constraintTop_toTopOf="@+id/kizPhotoImg"
            tools:text="Breed" />

    <TextView
            android:id="@+id/kizbirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/kizName"
            app:layout_constraintBottom_toBottomOf="@+id/kizPhotoImg"
            app:layout_constraintStart_toStartOf="@+id/kizName"
            tools:text="Age" />

    <TextView
            android:id="@+id/dogGenderTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/kizOption"
            app:layout_constraintTop_toTopOf="@+id/kizOption"

            tools:text="Gender" />

    <ImageButton
            android:id="@+id/kizOption"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_settings_24dp"
            app:layout_constraintEnd_toEndOf="@+id/kizPhotoImg"
            app:layout_constraintStart_toStartOf="@+id/kizPhotoImg"
            app:layout_constraintTop_toBottomOf="@+id/kizPhotoImg"></ImageButton>

    <TextView
            android:id="@+id/kiz_kindergarten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/kizPhotoImg"
            app:layout_constraintTop_toBottomOf="@+id/kizOption" />

    <TextView
            android:id="@+id/kiz_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TextView"
            android:textSize="17dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/kizPhotoImg"
            app:layout_constraintTop_toBottomOf="@+id/kiz_kindergarten" />


</android.support.constraint.ConstraintLayout>