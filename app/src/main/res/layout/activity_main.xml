<?xml version="1.0" encoding="utf-8"?>
<!--parent layout-->
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
>
    <!-- main layout-->
    <RelativeLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="#fff">
        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:title="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light"
                app:contentInsetStart="0dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:titleTextColor="#FFFFFF"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="411dp"
                android:layout_height="644dp" android:layout_marginTop="0dp" android:layout_below="@+id/toolbar"
                android:layout_alignParentEnd="true" android:layout_marginEnd="1dp"
                android:layout_alignParentStart="true" android:layout_marginStart="-1dp"
                android:layout_marginBottom="11dp" android:background="@mipmap/forebaby">

            <ImageView
                    android:id="@+id/babyphoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/ic_launcher_round"
                    android:visibility="visible" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="자녀 이름"
                    android:textSize="18dp"
                    android:id="@+id/SonName"
                    android:layout_gravity="center" android:gravity="center"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="유치원 이름"
                    android:textSize="30dp"
                    android:id="@+id/kindergartenName"
                    android:layout_gravity="center" android:gravity="center"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="반 이름"
                    android:textSize="20dp"
                    android:id="@+id/ClassName"
                    android:layout_gravity="center" android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="414dp"
                android:layout_height="288dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="-39dp" android:layout_marginTop="123dp"
                android:layout_alignParentStart="true" android:layout_marginStart="1dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="-4dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:text="공지사항"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/notice_move" android:layout_weight="1"
                        android:drawableTop="@drawable/ic_notifications_black_24dp"
                        android:background="@drawable/gradient" android:visibility="visible"
                        android:paddingTop="20dp" android:paddingBottom="20dp"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="알림장"
                        android:drawableTop="@drawable/ic_assignment_black_24dp"
                        android:id="@+id/advice_note_move" android:layout_weight="1"
                        android:background="@drawable/gradient" android:visibility="visible"
                        android:paddingTop="20dp" android:paddingBottom="20dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:text="앨범"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/album_move" android:layout_weight="1"
                        android:drawableTop="@drawable/ic_camera_alt_black_24dp"
                        android:background="@drawable/gradient" android:visibility="visible"
                        android:paddingTop="20dp" android:paddingBottom="20dp"/>
                <Button
                        android:text="식단표"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/carte_move" android:layout_weight="1"
                        android:background="@drawable/gradient"
                        android:drawableTop="@drawable/ic_kitchen_black_24dp" android:visibility="visible"
                        android:paddingTop="20dp" android:paddingBottom="20dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:text="투약의뢰서"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/administration_request_form_move" android:layout_weight="1"
                        android:drawableTop="@drawable/ic_child_care_black_24dp"
                        android:background="@drawable/gradient" android:visibility="visible"
                        android:paddingTop="20dp" android:paddingBottom="20dp"/>
                <Button
                        android:text="귀가동의서"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/consent_form_move" android:layout_weight="1"
                        android:background="@drawable/gradient"
                        android:drawableTop="@drawable/ic_store_black_24dp" android:visibility="visible"
                        android:paddingTop="20dp" android:paddingBottom="20dp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <!--navigation drawer-->
    <android.support.design.widget.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/main_nav_header">
    //           app:menu="@menu/main_navigation_menu"

        <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"></android.support.v7.widget.RecyclerView>
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
