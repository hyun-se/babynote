<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Resister.Join_membership" android:orientation="vertical" android:background="@color/backbaby">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6416c"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar8"
            app:titleTextColor="#FFFFFF"/>
    <FrameLayout
            android:layout_width="424dp"
            android:layout_height="306dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="427dp" app:srcCompat="@mipmap/forebaby" android:id="@+id/imageView2" />
    </FrameLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:layout_gravity="center">
        <TextView
                android:text="           아이디 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="0"
                android:gravity="center" android:layout_gravity="center"
                android:textColor="#000000"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_id" android:layout_weight="0"
                android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:layout_gravity="center">
        <TextView
                android:text="       비밀번호 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="0"
                android:textColor="#000000"/>

        <EditText
                android:id="@+id/edit_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:ems="10"
                android:hint="영문 ,숫자 ,특수문자( 8~20)"
                android:inputType="textPassword"
                android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:layout_gravity="center">
        <TextView
                android:text="               이름 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#000000"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_name"
                android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:layout_gravity="center">
        <TextView
                android:text="  핸드폰 번호 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="0"
                android:gravity="center" android:layout_gravity="center"
                android:textColor="#000000"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/edit_phonenumber" android:layout_weight="0"
                android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0" android:layout_gravity="center"
            android:gravity="center">
        <TextView
                android:text="           이메일 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="0"
                android:gravity="center" android:layout_gravity="center"
                android:textColor="#000000"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/edit_email" android:layout_weight="0"
                android:textColor="#000000"/>
    </LinearLayout>


        <Button
                android:id="@+id/select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/trumpet"
                android:backgroundTint="#BBDED6"
                android:gravity="center"
                android:text="확인"
                android:textColor="#000000" />



</LinearLayout>