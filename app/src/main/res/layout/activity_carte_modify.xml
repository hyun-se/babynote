<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".식단표.carte_modify">

    <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="식단표를 수정 , 삭제합니다."
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20dp" />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/item_border">

            <ImageView
                    android:id="@+id/carte_modify_image_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@tools:sample/avatars" />

            <Button
                    android:id="@+id/button_modify_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사진 선택" />
        </LinearLayout>

        <EditText
                android:id="@+id/edit_modify_menu1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/item_border"
                android:ems="10"
                android:gravity="start|top"
                android:hint="  오전 간식"
                android:inputType="textMultiLine" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/item_border"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/carte_modify_image_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@tools:sample/avatars" />

            <Button
                    android:id="@+id/button_modify_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사진 선택" />
        </LinearLayout>

        <EditText
                android:id="@+id/edit_modify_menu2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/item_border"
                android:ems="10"
                android:gravity="start|top"
                android:hint="  점심 식사"
                android:inputType="textMultiLine" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/item_border"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/carte_modify_image_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    tools:srcCompat="@tools:sample/avatars" />

            <Button
                    android:id="@+id/button_modify_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사진 선택" />
        </LinearLayout>

        <EditText
                android:id="@+id/edit_modify_menu3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/item_border"
                android:ems="10"
                android:gravity="start|top"
                android:hint="  오후 간식"
                android:inputType="textMultiLine" />
    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">

        <Button
                android:id="@+id/button_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00F1EBEB"
                android:text="수정하기"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"/>

        <Button
                android:id="@+id/button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:text="삭제하기"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"/>
    </LinearLayout>
</LinearLayout>